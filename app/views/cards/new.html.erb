<%= render partial: 'shared/title'%>
        <br/><br/><br/>

<%= simple_form_for @card, :url => { :action => "create" } do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><p>* Question (255 character limit)</p> 
  <%= f.text_area :qtext, :autofocus => true %></div>

  <div><p>* Answer (255 character limit)</p> 
  <%= f.text_area :atext, :autofocus => true %></div>

  <%= f.hidden_field :deck_id, :value => @card.deck_id %>
 

 <%= f.submit "Create Card", class: "btn btn-medium btn-success" %>

 <p class = "tableHeading"> Cards in this Deck </p>
 <table>
  <tr>
    <td style = "width: 25em"> <p class = "cardTitle1">Question:</p> </td>
    <td style = "width: 25em"> <p class = "cardTitle1">Answer:</p> </td>
  </tr>
</table>


  <div><%= render partial: 'shared/cards', collection: @cards %></div>

<% end %>