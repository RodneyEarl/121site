<h1> Add/Edit Cards </h1>
<h1> <%= @deck.deckTitle %> </h1>
 <% if !@deck.courseName.nil? %>
       
        <h2><%= @deck.subjectName %> - <%= @deck.courseNum %> - <%= @deck.courseName %> </h2>
        
    <% else %> 
        
        <h2><%= @deck.subjectName %> - <%= @deck.courseNum %> </h2>
        
    <% end %>


<%= simple_form_for @card, :url => { :action => "create" } do |f| %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "Question *" %> <br />
  <%= f.text_area :qtext, :autofocus => true %></div>

  <div><%= f.label "Answer *" %> <br />
  <%= f.text_area :atext, :autofocus => true %></div>

  <%= f.hidden_field :deck_id, :value => @card.deck_id %>
 

 <%= f.submit "Create a Card", class: "btn btn-large btn-primary" %>

 <h2> Cards in this Deck </h2>


  <div><%= render partial: 'shared/cards', collection: @cards %></div>

<% end %>