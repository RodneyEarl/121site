
        <p class = "deckInfo"><div style = "font-weight: bold; font-size: 1.9em"> <%= @deck.deckTitle %> </div>
     
        <% if !@deck.courseName.blank? %>
          <%= @deck.subjectname %> - <%= @deck.courseNum %> - <%= @deck.courseName %> 
        <% else %> 
          <%= @deck.subjectname %> - <%= @deck.courseNum %> 
        <% end %>
      
        <% if !@deck.school_name.eql? "~N/A~" %>
         <%= @deck.school_name %>
        <% end %>

        <% if !@deck.prof_name.blank? %>
         <%= @deck.prof_name %>
        <% end %>
        </p>
        <br/><br/><br/>

<%= simple_form_for @deck, :html => { :method => :put} do |f| %>

  <p> Fields marked with * are required </p>
  
  <div  class = "search">
  <%= f.label "Title *" %> 
  E.g. "Bio Midterm 1" <br />

  <%= f.text_field :deckTitle, :autofocus => true, :default => @deck.deckTitle%></div>

  <div  class = "search">

    <%= f.label "Subject *" %>
    <%= f.autocomplete_field :subjectname, autocomplete_subject_name_search_path  %>
  </div>
  

  <div  class = "search">
    <%= f.label "School Name" %>
    <%= f.autocomplete_field :school_name, autocomplete_school_name_search_path, :default => @deck.school_name  %>

  </div>
  

  <div  class = "search"><%= f.label "Course Number *" %>
  <%= f.text_field :courseNum, :autofocus => true, :default => @deck.courseNum %></div>

  <div  class = "search"><%= f.label "Course Name" %>
  <%= f.autocomplete_field :courseName, autocomplete_course_name_search_path, :default => @deck.courseName %></div>

   <div  class = "search">
    <%= f.label "Instructor (Last name, first name)" %>
    <%= f.text_field :prof_name, :default => @deck.prof_name %>

  </div>

  <p style= "font-size:10px;">Note: If either school, subject, and/or course name not found, a new entry will be created </p>

 <%= f.submit "Save Changes", class: "btn btn-medium btn-success" %>

 <% end %>
