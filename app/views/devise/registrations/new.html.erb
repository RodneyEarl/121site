<head>
  <script language="javascript" type="text/javascript">
    function CheckMaxlength(x)
    {
          var max = parseInt(x.getAttribute('maxlength'));
          var cur = x.value.length;

          if ( x.getAttribute && cur > max )
          {
              x.value = x.value.substring(0, max);
          }
    } 
</script>
</head>

<h2>Sign up</h2>

<%= form_for(@user, :url => { :action => "create" }) do |f| %>
  <%= devise_error_messages! %>

  <p> Fields marked with * are required </p>
  
  <div><%= f.label "Email *" %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label "Username *" %><br />
  <%= f.text_field :username, :onkeyup => "CheckMaxlength(this);", :maxlength => 16 %></div>

  <div><%= f.label "Password *" %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label "Password Confirmation *" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label "School Name (Optional)" %><br />
  <%= f.autocomplete_field :school_name, autocomplete_school_name_search_path %></div>

 
 <!-- ADD EMPLOYER OPTION HERE and extra fields that come with it-->

  <div><%= f.submit "Sign up", class: "btn btn-medium btn-primary" %></div>
<% end %>
