<%= simple_form_for @question, :url => { :action => "create" } do |f| %>

  <p> Please fill in all fields</p>
  <div class = "row">
    <div class = "col-sm-6">
      <%= f.input :qtext, :label => "Question", :as => :ckeditor%>
    </div>
    <div class = "col-sm-6">
      <%= f.input :a1text, :label => "1)", :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-6">
      <%= f.input :a2text, :label => "2)", :as => :ckeditor%>
    </div>
    <div class = "col-sm-6">
      <%= f.input :a3text, :label => "3)", :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-6">
      <%= f.input :a4text, :label => "4)", :as => :ckeditor%>
    </div>
     <div class = "col-sm-6">
      <%= f.input :a5text, :label => "5)", :as => :ckeditor%>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm-1">
      <%= f.input :answer, collection: 1..5 %>
    </div>
    <div class = "col-sm-4">
      <%= f.input :topic_id, collection: @topic %>
    </div>
  </div>
  <br/>
  <%= f.submit "Create Question", class: "btn btn-medium btn-success" %>
<% end %>

