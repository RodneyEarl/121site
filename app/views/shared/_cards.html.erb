   <head>
     <script type="text/javascript">
        function showAns(){
          $("#showAnswer").show();
          $("#showAButton").hide();
        }
        function hideAns(){
            $("#showAnswer").hide();
            $("#showAButton").show();
        }
        </script>
    </head>
    <body>

        <div>
        <p class="ex4"> <b>Question:</b> <br/> <%= cards.qtext %>
            <br/>
            <div id="showAButton"><p class="ex4"><button type="button" onclick="showAns()", class= "btn btn-small btn-primary">Show Answer</button></p>
            </p>
            </div>
        </div>
        
        <div id="showAnswer", style= "display: none">
            <p class="ex4">
            <button type="button" onclick="hideAns()", class= "btn btn-small btn-primary">Hide Answer</button>
            <p class="ex4"> <b>Answer:</b> <br/><%= cards.atext %></p>
        </div> 

    <%= link_to "View this Card", card_path(cards.card_id) %>
     <br/>

    <% if !@card.nil? %>
    <% if Deck.find_by(deck_id: @card.deck_id).user_id == @userID %>


    <%= link_to "Edit this Card", edit_card_path(cards.card_id)%>
     <br/>
     <%= link_to "Delete this Card", @card, method: :delete, data: { confirm: "You sure?" } %>
    <br/> 

    <% end %>
     <% end %>
 </body>


        
   
    
   
   