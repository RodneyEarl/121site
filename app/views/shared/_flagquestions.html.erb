<body>
	<% if flagquestions.exam == false %>
		<div class = "row" style = "border-bottom: 1px solid black; padding: 5px;">
			<div class = "col-md-2">
				<% @student = User.find_by(:id => flagquestions.user_id) %>
				<% if flagquestions.lname.nil? %>
					<% flagquestions.lname = @student.lname %>
					<% flagquestions.fname = @student.fname %>
					<% flagquestions.studentnumber = @student.studentnumber %>
					<% flagquestions.save %>
				<% end %>
				<p><%= flagquestions.lname %>, <%= flagquestions.fname %></p>
			</div>
			<div class = "col-md-1">
				<% if !@student.assistant && !@student.instructor %>
					<p><%= flagquestions.studentnumber %></p>
				<% end %>
			</div>
			<div class = "col-md-1">
				<%= flagquestions.lab %>
			</div>
			<div class = "col-md-1">
				<%= Topic.find_by(:topic_id => flagquestions.topic_id).name %>
			</div>
			<div class = "col-md-2">
				<% if flagquestions.date_submitted.nil? %>
					<% flagquestions.date_submitted = (DateTime.now.to_time - 8.hours).to_datetime %>
					<% flagquestions.save %>
				<% end %>
				<%= flagquestions.date_submitted.strftime("%a %b %-d at %I:%M%p") %>
			</div>
			<div class = "col-md-1">
				<%= link_to "View", {controller: "questions", action: "flagview", id: flagquestions.id}, class: "btn btn-mdall btn-success" %>
			</div>
			<div class = "col-md-3 col-md-offset-1">
				<%=flagquestions.grade.html_safe %>
			</div>
		</div>
	<% else %>
		<div class = "row" style = "border-bottom: 1px solid black; padding: 5px;">
			<div class = "col-md-2">
				<% @student = User.find_by(:id => flagquestions.user_id) %>
				<% if flagquestions.lname.nil? %>
					<% flagquestions.lname = @student.lname %>
					<% flagquestions.fname = @student.fname %>
					<% flagquestions.studentnumber = @student.studentnumber %>
					<% flagquestions.save %>
				<% end %>
				<p><%= flagquestions.lname %>, <%= flagquestions.fname %></p>
			</div>
			<div class = "col-md-1">
				<% if !@student.assistant && !@student.instructor %>
					<p><%= flagquestions.studentnumber %></p>
				<% end %>
			</div>
			<div class = "col-md-1">
				<%= flagquestions.lab %>
			</div>
			<div class = "col-md-1">
				<%= Topic.find_by(:topic_id => flagquestions.topic_id).name %>
			</div>
			<div class = "col-md-2">
				<% if flagquestions.date_submitted.nil? %>
					<% flagquestions.date_submitted = (DateTime.now.to_time - 8.hours).to_datetime %>
					<% flagquestions.save %>
				<% end %>
				<%= flagquestions.date_submitted.strftime("%a %b %-d at %I:%M%p") %>
			</div>
			<div class = "col-md-1">
				<%= link_to "View", {controller: "questions", action: "flagview", id: flagquestions.id}, class: "btn btn-mdall btn-info" %>
			</div>
			<div class = "col-md-1">
				Flagged
			</div>
			<div class = "col-md-3">
				<%=flagquestions.grade.html_safe %>
			</div>
		</div>
	<% end %>
</body>