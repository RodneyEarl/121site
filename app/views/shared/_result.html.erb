<% @deck=Deck.find_by(deck_id: result.deck_id) %>

<div>
    <h2> <%= @deck.deckTitle %> </h2>
</div>
   
    <% if !@deck.courseName.nil? %>
        <div>
        <p class="ex4"><%= @deck.subjectName %> - <%= @deck.courseNum %> - 
            <%= @deck.courseName %> </p>
        </div>
    <% else %> 
        <div>
        <p class="ex4"><%= @deck.subjectName %> - <%= @deck.courseNum %> </p>
        </div>
    <% end %>

     <% if Deckrating.where(deck_id: @deck.deck_id).empty? %>
        <p> No ratings </p>
    <% else %>

        <% @liked = Deckrating.where(deck_id: @deck.deck_id, liked: true).count %>
        <% @total = Deckrating.where(deck_id: @deck.deck_id).count %>
        <% @percent = (@liked * 100 / @total) %>
        <p><%= @percent %>% liked </p>
    <% end %>

<%= link_to "View this Deck ", deck_path(result.deck_id) %>

